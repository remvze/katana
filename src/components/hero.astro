---
import { Container } from './container';
import { CipherText } from './cipher-text';

import { generateRandomBinaryString } from '@/helpers/binary';

const binary = generateRandomBinaryString(1000);
---

<Container>
  <section class="hero">
    <div class="binary">{binary}</div>

    <img alt="Katana Logo" height="34.56" src="/logo.svg" width="36" />
    <h1>Ka<span>tana</span></h1>
    <p><CipherText client:load text="Short links made secure." /></p>
  </section>
</Container>

<style>
  .hero {
    position: relative;
    padding: 100px 0 40px;

    & .binary {
      position: absolute;
      top: -2.3rem;
      left: 50%;
      z-index: -1;
      width: calc(100% + 10px);
      height: 200px;
      overflow: hidden;
      font-family: var(--font-mono);
      line-height: 1.2;
      color: var(--color-foreground-subtler);
      text-align: center;
      word-break: break-all;
      pointer-events: none;
      cursor: default;
      user-select: none;
      opacity: 0.6;
      mask-image: linear-gradient(#000, transparent);
      transform: translateX(-50%);
    }

    & img {
      display: block;
      width: 36px;
      height: 34.56px;
      margin: 0 auto 8px;
    }

    & h1 {
      margin-bottom: 4px;
      font-family: var(--font-display);
      font-size: var(--font-xlg);
      font-weight: 700;
      text-align: center;

      & span {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-foreground-subtler)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & p {
      min-height: 1.2em;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtle);
      text-align: center;
    }
  }
</style>
