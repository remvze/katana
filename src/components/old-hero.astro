---
import { Velustro } from 'uvcanvas';
---

<div class="container">
  <div class="hero">
    <div class="effect">
      <Velustro client:load />
      <div class="overlay"></div>
      <div class="noise"></div>
    </div>

    <div class="logo">
      <img alt="Timesy Logo" height={45} src="/logo.svg" width={38.97} />
    </div>

    <h2 class="title">
      <span class="line">Short Links</span><br />That You Can <span
        class="gradient">Trust</span
      >.
    </h2>
    <h1 class="desc">
      Privacy-Focused URL Shortener.<br /><span>Free and Open-Source.</span>
    </h1>
  </div>
</div>

<style>
  .container {
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  .hero {
    position: relative;
    padding: 80px 0 30px;
    margin-bottom: 20px;
    overflow: hidden;
    text-align: center;

    & .effect {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      width: 100%;
      height: calc(100% - 2px);

      & .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: calc(100% + 4px);
        background: linear-gradient(rgb(0 0 0 / 60%), var(--color-neutral-1));
        backdrop-filter: grayscale(100%);
      }

      & .noise {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: calc(100% + 4px);
        background: transparent url('/images/noise.png') repeat 0 0;
        mix-blend-mode: lighten;
        opacity: 0.5;
      }
    }

    & .logo {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 50px;
      height: 50px;
      margin: 0 auto;
      margin-bottom: 20px;
      background: linear-gradient(
        var(--color-neutral-1),
        var(--color-neutral-3)
      );
      border: 1px solid var(--color-neutral-6);
      border-radius: 16px;
      box-shadow: inset 0 -1px 0 var(--color-neutral-8);

      & img {
        height: 24px;
      }
    }

    & .title {
      font-family: var(--font-heading);
      font-size: var(--font-xlg);
      font-weight: 700;
      line-height: 1.2;

      & .line {
        background: linear-gradient(
          var(--color-foreground-subtle),
          var(--color-foreground-subtle),
          var(--color-neutral-6)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      & .gradient {
        background: linear-gradient(
          135deg,
          var(--color-foreground),
          var(--color-foreground),
          var(--color-neutral-8)
        );
        background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    & .desc {
      margin-top: 12px;
      font-size: var(--font-sm);
      line-height: 1.5;
      color: var(--color-foreground-subtle);

      & span {
        font-size: var(--font-xsm);
        color: var(--color-foreground-subtler);
      }
    }
  }
</style>
